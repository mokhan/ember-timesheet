<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6">
    {{#if loginFailed}}
      <div class="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Ooops!</strong> Your email or password aint right. Do you want to 
        {{#linkTo 'users.new'}}register{{/linkTo}}?
      </div>
    {{/if}}

    <form class="form-inline" {{action "login" on="submit"}}>
      <fieldset>
        <legend>Login</legend>
        <div class="form-group">
          <label for="exampleInputEmail">Email address</label>
          {{input type="email" value=email class="form-control" placeholder="Email"}}
        </div>
        <div class="form-group">
          <label for="exampleInputPassword">Password</label>
          {{input type="password" value=password class="form-control" placeholder="Password"}}
        </div>
        <button type="submit" class="btn btn-default" {{bindAttr disabled="isProcessing"}}>Login</button>
        <button {{action cancel}} class="btn">Cancel</button>
        or
        {{#linkTo 'users.new'}}Register{{/linkTo}}
      </fieldset>
    </form>
  </div>
  <div class="col-lg-3"></div>
</div>
